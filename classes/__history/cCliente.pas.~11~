unit cCliente;

interface

uses
  System.Classes, Vcl.Controls, Vcl.ExtCtrls, Vcl.Dialogs, System.SysUtils, datamodule, Data.DB;

type
  TcCliente = Class
    private
      FId: integer;
      FCpf: string;
      FNome: string;


    public
     procedure CheckExistenceByCPF(cpf: string);

    property id: integer read FId write FId;
    property cpf: string read FCpf write FCpf;
    property nome: string read FNome write FNome;

  End;

implementation

procedure TcCliente.CheckExistenceByCPF(cpf: string);
  begin
    with uDataModule.qryClienteGetByCpf do
      begin
        Close;
        Parameters.ParamByName('cpf_cliente').Value := cpf;
        Open;

        if IsEmpty then
          ShowMessage('Nenhum cliente cadastrado com CPF inserido');

      end;
  end;

end.
